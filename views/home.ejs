<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
    <link rel='stylesheet' href='/stylesheets/navbar.css' />
    <link rel='stylesheet' href='/stylesheets/home.css' />
    <link rel='stylesheet' href='/stylesheets/modal.css' />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.js"></script>
    <script type="text/javascript" src="/javascript/home.js"></script>
    <script type="text/javascript" src="/javascript/modal.js"></script>
  </head>
  <body>
    <main>
    <% include partials/home-top-nav %>
    <div class="container">
      <div class="row">
        <h1 class="dash-header"><%= username %>'s Dashboard</h1>
        <% if (confirm === 'Yes') { %>
          <div class="default-timeline col s12 center-align">
            <div id="dash-vis"></div>
          </div>
        <% } else { %>
          <div class="center">
            <p class="dash-no-timeline">It appears you haven't created a timeline yet! Click below to create one.</p>
            <a class="modal-trigger new-button" href="#modal3"><button class="no-time-new-button btn">Create New Timeline</button></a>
          </div>
        <% } %>
      </div>
    </div>
    <% if (confirm === 'Yes') { %>
      <div class="container">
        <div class="row">
            <div class="carousel timeline-carousel col s12">
            <!-- DYNAMICALLY CREATES THE CARDS FOR THE CAROUSEL -->
            <% for (let i = 1; i <= 5; i++) { %>
              <div class="carousel-item">
                <div class="time-container">
                  <div class="time">
                    <div class="side">
                      <a href="#two!"><div id="capture<%=i%>" class="selected-image" height="200px" width="200px"></div></a>
                    </div>
                    <div class="side back">
                      <button href="#modal1" class="waves-effect btn modal-trigger edit-button">Edit</button>
                      <div class="divider"></div>
                      <button href="#modal2" class="waves-effect btn modal-trigger delete-button">Delete</button>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
          </div>
          <div id="carousel" class="carousel-fixed-item center">
            <a class="btn darken-text-2 prev">Last</a>
            <a class="btn darken-text-2 next">Next</a><br>
            <!-- DYNAMICALLY CREATES NUMBER BUTTONS -->
            <% for (let i = 1; i <= 5; i++) { %>
            <button id="btn<%=i%>" class="btn-small darken-text-2"><%=i%></button>
            <% } %>

          </div>
        </div>
      </div>
    <% } %>
  </main>
    <% include partials/modals %>
    <% include partials/footer %>

  </body>
</html>
